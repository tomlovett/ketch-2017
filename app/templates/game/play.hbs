 <div class="flex-10 layout-row">
    {{#if inPlay}}
      {{#paper-button onClick=(action 'recordScore' squad.id) class="white flex-50"}}
        We scored!
      {{/paper-button}}

      {{#paper-button onClick=(action 'recordScore' opponent.id) class="white flex-50"}}
        They scored...
      {{/paper-button}}
    {{else}}
      {{#paper-button onClick=(action 'setLine') class="white flex"}}
        Done Subs
      {{/paper-button}}
    {{/if}}
  </div>

  <span class="flex-5"></span>
 
  <div class="players-section layout-row flex">
    <span class='flex-5'></span>
    {{#if inPlay}}
      {{field-stats
          class='flex-45'
          onClickStat=(action 'clickStat')
      }}
    {{else}}
      {{bench-field
          players=benchMen
          onClick=(action 'sub')
          class='flex-25'
          playerClass=squad.primary
      }}
      {{bench-field
          players=benchWomen
          onClick=(action 'sub')
          playerClass=squad.secondary
          class='flex-25'
      }}
    {{/if}}
      <span class='flex'></span>
      <div class='flex-25'>
        {{bench-field
            players=fieldWomen
            onClick=(action 'clickPlayer')
            playerClass=squad.secondary
        }}
       {{bench-field
            players=fieldMen
            onClick=(action 'clickPlayer')
            playerClass=squad.primary
        }}
        {{#if inPlay}}
          {{!-- adjust line --}}
          {{#paper-button}}
            {{#link-to 'game.recap'}}Recap{{/link-to}}
          {{/paper-button}}
        {{else}}
          {{#paper-button onClick=(action 'clearLine') class='flex-5 white'}}
            Clear Line
          {{/paper-button}}
        {{/if}}
      </div>
      <span class='flex-5'></span>
  </div>
